<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<mapper namespace="member">
	<insert id="insertMember">
		insert into member (userid,passwd,username,hp,email,addr1,addr2,addr3)
		values
		(#{userid}, #{passwd}, #{username},#{hp}, #{email}, #{addr1}, #{addr2},
		#{addr3})
	</insert>
	
	<select id="login_check" 
  parameterType="com.example.project.model.member.dto.MemberDTO"
  resultType="String">
    select username from member
    where userid=#{userid} and passwd=#{passwd}
  </select>
  
  <select id="viewMember" 
  resultType="com.example.project.model.member.dto.MemberDTO">
    select * from member
    where userid=#{userid}
  </select>
</mapper>  














